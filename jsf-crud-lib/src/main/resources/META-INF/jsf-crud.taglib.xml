<?xml version="1.0" encoding="UTF-8"?>
<facelet-taglib xmlns="http://java.sun.com/xml/ns/javaee"
                xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facelettaglibrary_2_0.xsd"
                version="2.0">

    <namespace>urn:be:e-contract:crud:jsf</namespace>

    <tag>
        <tag-name>crud</tag-name>
        <component>
            <component-type>crud.crud</component-type>
        </component>
        <attribute>
            <name>entity</name>
            <required>true</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <name>title</name>
            <type>java.lang.String</type>
        </attribute>
    </tag>

    <tag>
        <tag-name>create</tag-name>
        <component>
            <component-type>crud.create</component-type>
        </component>
        <attribute>
            <name>disabled</name>
            <type>java.lang.Boolean</type>
        </attribute>
    </tag>

    <tag>
        <tag-name>read</tag-name>
        <component>
            <component-type>crud.read</component-type>
        </component>
    </tag>

    <tag>
        <tag-name>update</tag-name>
        <component>
            <component-type>crud.update</component-type>
        </component>
        <attribute>
            <name>disabled</name>
            <type>java.lang.Boolean</type>
        </attribute>
    </tag>

    <tag>
        <tag-name>delete</tag-name>
        <component>
            <component-type>crud.delete</component-type>
        </component>
        <attribute>
            <name>disabled</name>
            <type>java.lang.Boolean</type>
        </attribute>
        <attribute>
            <name>deleteAll</name>
            <type>java.lang.Boolean</type>
        </attribute>
    </tag>
    
    <tag>
        <tag-name>createListener</tag-name>
        <component>
            <component-type>crud.createListener</component-type>
            <handler-class>be.e_contract.crud.jsf.CreateListenerTagHandler</handler-class>
        </component>
        <attribute>
            <name>action</name>
            <required>true</required>
            <type>javax.el.MethodExpression</type>
        </attribute>
    </tag>
    
    <tag>
        <tag-name>updateListener</tag-name>
        <component>
            <component-type>crud.updateListener</component-type>
            <handler-class>be.e_contract.crud.jsf.UpdateListenerTagHandler</handler-class>
        </component>
        <attribute>
            <name>action</name>
            <required>true</required>
            <type>javax.el.MethodExpression</type>
        </attribute>
    </tag>
    
    <tag>
        <tag-name>deleteListener</tag-name>
        <component>
            <component-type>crud.deleteListener</component-type>
            <handler-class>be.e_contract.crud.jsf.DeleteListenerTagHandler</handler-class>
        </component>
        <attribute>
            <name>action</name>
            <required>true</required>
            <type>javax.el.MethodExpression</type>
        </attribute>
    </tag>
    
    <tag>
        <tag-name>field</tag-name>
        <component>
            <component-type>crud.field</component-type>
        </component>
        <attribute>
            <name>name</name>
            <required>true</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <name>label</name>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <name>hide</name>
            <type>java.lang.Boolean</type>
        </attribute>
    </tag>
    
    <tag>
        <tag-name>action</tag-name>
        <component>
            <component-type>crud.action</component-type>
            <handler-class>be.e_contract.crud.jsf.ActionTagHandler</handler-class>
        </component>
        <attribute>
            <name>value</name>
            <required>true</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <name>action</name>
            <required>true</required>
            <type>javax.el.MethodExpression</type>
        </attribute>
    </tag>

</facelet-taglib>